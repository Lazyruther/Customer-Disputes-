generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dispute {
  id           Int      @id @default(autoincrement())
  customerName String
  issue        String
  status       DisputeStatus @default(OPEN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum DisputeStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}
